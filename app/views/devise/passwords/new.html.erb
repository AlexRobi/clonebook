<section id="newPassword">
  <div class="container col-lg-6 col-xl-4 my-4">
    <h2><%= t('.forgot_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div class="label"><%= t('devise.form.email') %></div>
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text"><%= fa_icon "envelope" %></div>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>